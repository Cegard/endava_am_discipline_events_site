<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %} event creation {% endblock %}</title>
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		{% block body %}
		<div class="createEventForm">
				<form id="createEventForm" method="post" action="{{ path('createEvent') }}">		
					<div class="formLine">
				<label>name</label>
				<input type="text" form="createEventForm" id="createEvetName" name="name" required>
			</div>
			<div class="formLine">
				<label>description</label>
				<input type="text" form="createEventForm" id="createEventDesc" name="desc" required>
			</div>
			<div class="formLine">
				<label>category</label>
				<input type="text" form="createEventForm" id="createEventDesc" name="category" required>
			</div>
			<div class="formLine">
				<label>address</label>
				<input type="text" form="createEventForm" id="createEventAddress" name="address" required>
			</div>
			<div class="formLine">
				<label>beginning date</label>
				<input type="date" form="createEventForm" id="createEventStartDate" name="startDate" required>
			</div>
			<div class="formLine">
				<label>ending date</label>
				<input type="date" form="createEventForm" id="createEventEndingDate" name="endingDate" required>
			</div>
			<div class="formLine">
				<label>presential</label>
				<input type="checkbox" form="createEventForm" id="createEventEndingDate" name="pressence" value="presential">
			</div>
			<div class="createEvent">
				<input type="submit" form="createEventForm" id="createEventSubmit" value="Send">
			</div>
		</form></div>
		{% endblock %}
		{% block javascripts %}{% endblock %}
	</body>
</html>